<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningFun.Views.MatchView"
             BackgroundColor="#141d22">
    <ContentPage.Content>
        <Grid
            Margin="10"
            RowDefinitions="*, *"
            ColumnDefinitions="*, *">
           
            <Frame 
                HasShadow="True"
                CornerRadius="15"
                
                IsClippedToBounds="True">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer/>
                </Frame.GestureRecognizers>
                <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="A"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>
            </Frame>
            
            
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Text="अ"/>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Text="B"/>

            <Button
                Grid.Row="1"
                Grid.Column="1"
                Text="ब"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>